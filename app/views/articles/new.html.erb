<div class='full-page'>
    <%= form_with(model: @article, local: true) do |f| %>
        <% if @article.errors.any? %>
            <%= render partial: 'partials/error_message', locals: {errors: @article.errors, consequence: 'prevented this article from saving'} %>
        <% end %>

        <%= f.label :title%>
        <%= f.text_field :title%>

        <%= f.label :body%>
        <%= f.rich_text_area :body%>

        <%= f.label :published%>
        <%= f.check_box :published%>

        <%= f.submit 'Create article' %>
    <% end %>
</div>
